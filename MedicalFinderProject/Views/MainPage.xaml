<Page x:Class="MedicalFinderProject.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F2F4F8">

    <Grid>
        <Border CornerRadius="20" Background="White" Padding="30" Width="1000" 
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <StackPanel>

                <!-- Заголовок -->
                <TextBlock Text="Список врачей" FontSize="24" FontWeight="Bold" 
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,15" />

                <!-- Фильтры -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <ComboBox x:Name="ClinicFilter" Width="150" Margin="5" 
                              Style="{StaticResource RoundedComboBox}" 
                              SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="Все клиники"/>
                        <!-- Заполните данными из базы -->
                    </ComboBox>

                    <ComboBox x:Name="SpecializationFilter" Width="150" Margin="5" 
                              Style="{StaticResource RoundedComboBox}" 
                              SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="Все специализации"/>
                        <!-- Заполните данными из базы -->
                    </ComboBox>

                    <ComboBox x:Name="ExperienceFilter" Width="150" Margin="5" 
                              Style="{StaticResource RoundedComboBox}" 
                              SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="Опыт"/>
                        <!-- Заполните данными из базы -->
                    </ComboBox>

                    <ComboBox x:Name="RatingFilter" Width="150" Margin="5" 
                              Style="{StaticResource RoundedComboBox}" 
                              SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="Оценка"/>
                        <!-- Заполните данными из базы -->
                    </ComboBox>
                </StackPanel>

                <!-- Список врачей -->
                <ListView x:Name="DoctorsList" BorderBrush="#D1D5DB" BorderThickness="1" 
                          Height="400" Width="950" HorizontalAlignment="Center">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FullName}" Width="250"/>
                            <GridViewColumn Header="Клиника" DisplayMemberBinding="{Binding ClinicName}" Width="200"/>
                            <GridViewColumn Header="Специализация" DisplayMemberBinding="{Binding Specialization}" Width="200"/>
                            <GridViewColumn Header="Опыт" DisplayMemberBinding="{Binding Experience}" Width="100"/>
                            <GridViewColumn Header="Оценка" DisplayMemberBinding="{Binding Rating}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</Page>
