<Page x:Class="MedicalFinderProject.Views.ResetPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F2F4F8">

    <Grid>
        <Border CornerRadius="20" Background="White" Padding="30" Width="400" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Effect="{DynamicResource DropShadow}">

            <StackPanel>

                <!-- Заголовок -->
                <TextBlock Text="Введите новый пароль" FontSize="24" FontWeight="Bold" 
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Поле для нового пароля -->
                <TextBlock Text="Новый пароль" FontSize="14" Foreground="#2C3E50" />
                <PasswordBox x:Name="NewPasswordBox" 
                             Style="{StaticResource RoundedPasswordBox}" Margin="0,10" Height="46"/>

                <!-- Поле для токена -->
                <TextBlock Text="Токен" FontSize="14" Foreground="#2C3E50" />
                <TextBox x:Name="TokenBox" 
                         Style="{StaticResource RoundedTextBox}" Margin="0,10" Height="44"/>

                <!-- Кнопка для сброса пароля -->
                <Button Content="Сбросить пароль" Click="ResetPassword_Click"
                        Style="{StaticResource PrimaryButton}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
