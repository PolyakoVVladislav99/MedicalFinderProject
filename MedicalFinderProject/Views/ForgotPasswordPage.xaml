<Page x:Class="MedicalFinderProject.Views.ForgotPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F2F4F8">

    <Grid>
        <Button x:Name="BackButton"
            Content="← Назад"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="20"
            Width="100"
            Style="{StaticResource PrimaryButton}"
            Click="BackButton_Click"
            />
        <Border CornerRadius="20" Background="White" Padding="30" Width="400" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Effect="{DynamicResource DropShadow}">
            <StackPanel>

                <TextBlock Text="Введите ваш email" FontSize="24" FontWeight="Bold" 
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBox x:Name="EmailBox" Style="{StaticResource RoundedTextBox}" Margin="0,10" Height="44"/>

                <Button Content="Сгенерировать токен" Click="SendResetLink_Click"
                        Style="{StaticResource PrimaryButton}" Margin="0,10"/>

                <TextBlock x:Name="ResetTokenText" HorizontalAlignment="Center" Foreground="Gray" Margin="0,10"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
