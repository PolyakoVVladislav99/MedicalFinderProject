<Page x:Class="MedicalFinderProject.Views.LoginPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F2F4F8">

    <Grid>
        <Border CornerRadius="20" Background="White" Padding="30" Width="400" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Effect="{DynamicResource DropShadow}">
            <StackPanel Margin="0">

                <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" 
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0 0 0 20"/>

                <TextBlock Text="Email" Margin="0 0 0 5" />
                <TextBox x:Name="EmailBox" Height="39" Margin="0 0 0 10"
                         Style="{StaticResource RoundedTextBox}" />

                <TextBlock Text="Пароль" Margin="0 0 0 5" />
                <PasswordBox x:Name="PasswordBox" Height="39" Margin="0 0 0 20"
                             Style="{StaticResource RoundedPasswordBox}" />

                <Button Content="Войти" Click="LoginButton_Click"
                        Style="{StaticResource PrimaryButton}" />

                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                    Нет аккаунта? <Hyperlink Click="RegisterLink_Click">Зарегистрируйтесь</Hyperlink>
                </TextBlock>

                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
    <Hyperlink Click="ResetPassword_Click">Забыли пароль?</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>
