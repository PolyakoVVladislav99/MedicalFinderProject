<Page x:Class="MedicalFinderProject.Views.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalFinderProject.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">


    <Grid>
        <Border CornerRadius="20" Background="White" Padding="30" Width="651" 
        HorizontalAlignment="Center" VerticalAlignment="Center" 
        Effect="{DynamicResource DropShadow}" Height="399" SnapsToDevicePixels="True">
            <StackPanel>
                <TextBlock Text="Профиль" FontSize="24" FontWeight="Bold" 
           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock x:Name="NameTextBlock" Text="" FontSize="20" FontWeight="Bold" 
Foreground="#2C3E50" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,10" Width="588"/>
                <Button Content="Мои назначения" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Center" Margin="0,87,0,0" VerticalAlignment="Top" Width="147" Click="Button_Click_1"/>
                <Button Content="Расписание врачей" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top"/>
                <Button Content="Сменить пароль" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="147" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
