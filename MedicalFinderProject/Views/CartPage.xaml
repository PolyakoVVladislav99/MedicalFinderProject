<Page x:Class="MedicalFinderProject.Views.CartPage"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Корзина">

    <Grid Background="White">
        <TextBlock Text="Корзина" FontSize="24" FontWeight="Bold"
               Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <ListView x:Name="CartListView" ItemsSource="{Binding Cart}" Margin="40,80,40,100">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="0,0,0,1" BorderBrush="LightGray" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="400"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Description}" Grid.Column="1" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Price}" Grid.Column="2" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SelectedDate, StringFormat=dd.MM.yyyy}" Grid.Column="3" VerticalAlignment="Center"/>

                            <Button Content="Удалить"
                            Grid.Column="4"
                            Margin="10,0,0,0"
                            Width="80"
                            Tag="{Binding}"
                            Style="{StaticResource PrimaryButton}"
                            Click="RemoveItemButton_Click"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="TotalTextBlock" FontSize="18" FontWeight="Bold"
               HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,60"
               Foreground="#2C3E50" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="К услугам" Width="120" Margin="10,0" Click="BackToServices_Click" Style="{StaticResource PrimaryButton}"/>
            <Button Content="Очистить корзину" Width="150" Margin="10,0" Click="ClearCart_Click" Style="{StaticResource PrimaryButton}"/>
            <Button x:Name="PayButton" Content="Оплатить" Width="120" Margin="10,0" Click="PayButton_Click" Style="{StaticResource PrimaryButton}"/>
            
        </StackPanel>
    </Grid>
</Page>
