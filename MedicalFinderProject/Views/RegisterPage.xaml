<Page x:Class="MedicalFinderProject.Views.RegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Background="#F2F4F8">

    <Grid>
        <Border CornerRadius="20" Background="White" Padding="30" Width="400" 
          HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>

                <!-- Заголовок -->
                <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" 
                     Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0 0 0 20"/>

                <!-- ФИО -->
                <TextBlock Text="ФИО" Margin="0 0 0 5"/>
                <TextBox x:Name="FullNameBox" 
                   Style="{StaticResource RoundedTextBox}" 
                   Height="40" Margin="0 0 0 15"/>

                <!-- Email -->
                <TextBlock Text="Email" Margin="0 0 0 5"/>
                <TextBox x:Name="EmailBox" 
                   Style="{StaticResource RoundedTextBox}" 
                   Height="39" Margin="0 0 0 15"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль" Margin="0 0 0 5"/>
                <PasswordBox x:Name="PasswordBox" 
                       Style="{StaticResource RoundedPasswordBox}" 
                       Height="39" Margin="0 0 0 15"/>

                <!-- Телефон -->
                <TextBlock Text="Телефон" Margin="0 0 0 5"/>
                <TextBox x:Name="PhoneBox" 
                   Style="{StaticResource RoundedTextBox}" 
                   Height="42" Margin="0 0 0 15"/>

                <!-- Роль (только для администратора/отладки) -->
                <TextBlock Text="Роль" Margin="0 0 0 5"/>
                <ComboBox x:Name="RoleComboBox" 
                    DisplayMemberPath="RoleName" SelectedValuePath="RoleID"
                    Style="{StaticResource RoundedComboBox}" 
                    Height="38" Margin="0 0 0 20"/>

                <!-- Кнопка регистрации -->
                <Button x:Name="RegisterButton" Content="Зарегистрироваться" 
                  Click="RegisterButton_Click"
                  Style="{StaticResource PrimaryButton}" Height="35"/>

                <TextBlock HorizontalAlignment="Center">
                  <Run Text="Уже есть аккаунт? " />
                  <Hyperlink Click="LoginLink_Click">
                      <Run Text="Войти" />
                  </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>
